<h1>Listing listings</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Condition</th>
    <th>Price</th>
    <th>Comments</th>
    <th>Status</th>
    <th>Subject</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @listings.each do |listing| %>
  <tr>
    <td><%= listing.type %></td>
    <td><%= listing.condition %></td>
    <td><%= listing.price %></td>
    <td><%= listing.comments %></td>
    <td><%= listing.status %></td>
    <td><%= listing.subject %></td>
    <td><%= link_to 'Show', listing %></td>
    <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
    <td><%= link_to 'Destroy', listing, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

