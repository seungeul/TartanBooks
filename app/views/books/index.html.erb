<h1>Listing books</h1>

<% #search input box and button %>
<%= form_tag books_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :title => nil %>
  </p>
<% end %>

<table>
<%	#table headings %>
  <tr>
    <th>Isbn</th>
    <th>Title</th>
    <th>Author</th>
    <th>Year</th>
    <th>Publisher</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% #results from the database %>
<% @books.each do |book| %>
  <tr>
    <td><%= book.isbn %></td>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.year %></td>
    <td><%= book.publisher %></td>
	<td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
<%end%>

	#results from ISBNdb.com
<% @booksfromISBN.each do|booksfromISBN|%>
	</tr>
	<tr>
	<td><%= booksfromISBN.isbn %></td>
    <td><%= booksfromISBN.title %></td>
    <td><%= booksfromISBN.authors_text %></td>
    <td><%= booksfromISBN.year %></td>
    <td><%= booksfromISBN.publisher_text %></td></tr>

<% end %>
</table>

